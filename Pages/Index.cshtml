@page
@model IndexModel

@{
    ViewData["Title"] = "Home page";
}

<link href="~/Content/DataTables-1.11.3/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div>
    <h3>Employees</h3>
    <a asp-page="/Crud/Edit" class="btn btn-primary text-white">Create</a>
</div>
<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap"
               width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email Address</th>
                    <th>Actions</th>
                </tr>
            </thead> 
        </table>
    </div>
</div>
@section Scripts
{

    <script src="~/Content/DataTables-1.11.3/js/jquery.dataTables.min.js"></script>

    <script src="~/Content/DataTables-1.11.3/js/dataTables.bootstrap4.min.js"></script>

    <script src="~/js/employeeDataTables.js"></script>
}
